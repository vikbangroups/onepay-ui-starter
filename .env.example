# OnePay UI - Environment Configuration Template
# Copy this file to .env.local and update values for your environment

# ==========================================
# MOCK API CONFIGURATION
# ==========================================
# Set to 'true' for development with mock APIs
# Set to 'false' to use real backend API
VITE_USE_MOCK_API=true

# Base URL for backend API (when VITE_USE_MOCK_API=false)
VITE_API_BASE_URL=http://localhost:3000/api

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# ==========================================
# RAZORPAY CONFIGURATION
# ==========================================
# Test mode key (for development)
VITE_RAZORPAY_KEY_ID=rzp_test_1234567890

# Razorpay mode: 'test' or 'live'
VITE_RAZORPAY_MODE=test

# ==========================================
# APP CONFIGURATION
# ==========================================
# Product/App name
VITE_PRODUCT_NAME=OnePay

# Brand name
VITE_BRAND_NAME=One Code Solutions

# Logo URL (relative to public folder)
VITE_LOGO_URL=/logo.png

# ==========================================
# ENVIRONMENT
# ==========================================
# Current environment: development, staging, production
NODE_ENV=development

# ==========================================
# DEBUGGING
# ==========================================
# Enable debug logs in console (true/false)
VITE_DEBUG_MODE=false

# ==========================================
# SECURITY
# ==========================================
# CSRF protection (in production, set to actual token endpoint)
VITE_CSRF_ENABLED=false

# ==========================================
# NOTES
# ==========================================
# Do NOT commit .env.local to git
# Add .env.local to .gitignore
# Each developer should have their own .env.local
# For CI/CD, use environment variables directly
